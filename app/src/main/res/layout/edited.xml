<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">



    <EditText
        android:id="@+id/TF_location"
        android:layout_width="290dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/B_search"
        android:ems="10"
        android:hint="Search"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/B_search"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="109dp"
        android:onClick="onClick"
        android:text="Search"
        android:background="@drawable/drawable"/>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/B_hopistals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:onClick="onClick"
        android:layout_below="@+id/TF_location"

        android:text="Hospitals"
        android:background="#4ee230"
        android:layout_marginLeft="90dp"
       />

    <Button
        android:id="@+id/B_pharmacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/B_hopistals"
        android:layout_alignBottom="@+id/B_hopistals"
        android:layout_alignEnd="@+id/TF_location"
        android:layout_marginEnd="7dp"
        android:onClick="onClick"
        android:background="#4ee230"

        android:text="pharmacy" />


</RelativeLayout>