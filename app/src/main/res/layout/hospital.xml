<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backy"
    android:configChanges="orientation|screenSize|keyboardHidden"
    >

    <TextView


        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView6"
        android:layout_alignEnd="@+id/editText"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="11dp"
        android:configChanges="orientation|screenSize|keyboardHidden"

        android:text="H O S P I T A L"
        android:textColor="#ffff"
        android:textSize="40sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/editText"
        android:layout_width="230dp"
        android:layout_height="180px"

        android:layout_marginTop="120dp"
        android:layout_marginLeft="80dp"
        android:background="@drawable/round"
        android:ems="10"
        android:hint="     Name"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColorHint="#060606" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="230dp"
        android:layout_height="180px"

        android:layout_marginTop="190dp"
        android:layout_marginLeft="80dp"
        android:background="@drawable/round"
        android:ems="10"
        android:hint="     Email"
        android:inputType="textEmailAddress"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColorHint="#060606" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="230dp"
        android:layout_height="180px"

        android:layout_below="@+id/editText2"
android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round"
        android:ems="10"
        android:hint="     Phone"
        android:inputType="phone"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColorHint="#060606" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="230dp"
        android:layout_height="180px"



        android:layout_marginTop="330dp"
        android:layout_marginLeft="80dp"
        android:background="@drawable/round"
        android:ems="10"
        android:hint="     License"
        android:inputType="numberPassword"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColorHint="#060606" />
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200px"
        android:layout_height="190px"

        android:layout_marginTop="330dp"
        android:layout_marginLeft="25dp"

        app:srcCompat="@drawable/licences" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText5"
        android:configChanges="orientation|screenSize|keyboardHidden"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:background="@drawable/buttondesign"
        android:onClick="submit"
        android:text="SUBMIT" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150px"
        android:layout_height="180px"


        android:layout_marginTop="260dp"
        android:layout_marginLeft="30dp"
        app:srcCompat="@drawable/phh" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150px"
        android:layout_height="180px"
       android:layout_marginTop="190dp"
        android:layout_marginLeft="30dp"
        app:srcCompat="@drawable/mail1" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="150px"

        android:layout_height="180px"
        android:layout_alignBottom="@+id/editText"

        android:layout_marginLeft="30dp"

        app:srcCompat="@drawable/hospp" />


</RelativeLayout>

